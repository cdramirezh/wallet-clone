{
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"extends": ["eslint:recommended", "prettier"],
	"env": {
		"node": true,
		"jest": true
	},
	"rules": {
		"no-console": "warn",
		"no-unused-vars": "warn",
		"no-undef": "warn",
		"import/extensions": ["error", "always"]
	},
	"plugins": ["import"],
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".js"]
			}
		}
	}
}
